    <thead>
      <tr class="info">
        <th>Item</th>
        <th>Qtn</th>
        <th>Delivery Charge</th>
         <th>Price</th>
        <th><a id="close">exit</a></th>
      </tr>
    </thead>
    <tbody>
      \{{#each carts}}
      <tr class="success">
          <td>\{{item}}</td>
          <td>\{{qtn}}</td>
          <td>\{{charge}}</td>
          <td>\{{price}}</td>
          <td><a title="Remove this item" class="removeItem" data-id="\{{itemId}}">X</a></td>
      </tr>
      \{{/each}}
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td class="danger" id="total"><strong>10500</strong></td>
        <td><button type="button" class="btn btn-default">Buy</button></td>
      </tr>
    </tbody>
  </table>
  </div>
  <div class="col-sm-1"></div>
  </div>
  </script>

